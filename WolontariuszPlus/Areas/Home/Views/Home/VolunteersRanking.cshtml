@model ICollection<WolontariuszPlus.Areas.Home.Models.VolunteerRankViewModel>
@{
    ViewData["Title"] = "Ranking wolontariuszy";
}

<h4>Ranking wolontariuszy:</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię i nazwisko
            </th>
            <th>
                Liczba punktów
            </th>
            <th>
                Profil
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => v.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => v.Points)
                </td>
                <td>
                    <a asp-action="VolunteerProfile" asp-route-volunteerId="@v.VolunteerId"
                       class="btn btn-success" data-toggle="tooltip" data-placement="top" title="Profil wolontariusza">

                        <i class="fas fa-user"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>