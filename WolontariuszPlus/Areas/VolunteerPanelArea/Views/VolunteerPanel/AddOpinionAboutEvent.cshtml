@model OpinionViewModel

<h4>Oceń wydarzenie</h4>

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOpinionAboutEvent">
            <div class="form-group">
                <label asp-for="Opinion" class="control-label"></label>:
                <textarea asp-for="Opinion" class="form-control">@Model.Opinion</textarea>
                <span asp-validation-for="Opinion" class="text-danger"></span>
            </div>

            @*<label asp-for="Rate" class="control-label"></label>:<br />
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input asp-for="Rate" type="radio" name="decision" value="+" class="form-check-input" /> Pozytywna
                    </label>
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input asp-for="Rate" type="radio" name="decision" value="-" class="form-check-input" /> Negatywna
                    </label>
                </div>
                <span asp-validation-for="Rate" class="text-danger"></span>
                <input type="hidden" asp-for="EventId" />
                <br />*@


            @Html.RadioButtonFor(r => Model.Rate, "+", new { @class = "radio" }) Pozytywna
            @Html.RadioButtonFor(r => Model.Rate, "-", new { @class = "radio" }) Negatywna
            @*<input asp-for="Rate" type="radio" name="decision" value="+" class="radio" /> +
                <input asp-for="Rate" type="radio" name="decision" value="-" class="radio" /> -*@
            <span asp-validation-for="Rate" class="text-danger"></span>
            <input type="hidden" asp-for="EventId" />
            <br />
            <br />
            @if (Model.Rate != null)
            {
                <input type="submit" value="Aktualizuj ocenę" class="btn btn-outline-primary" />
            }
            else
            {
                <input type="submit" value="Dodaj ocenę" class="btn btn-outline-primary" />
            }
        </form>
    </div>
</div>