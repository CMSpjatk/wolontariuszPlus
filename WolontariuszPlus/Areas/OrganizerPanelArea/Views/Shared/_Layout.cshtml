<div class="container">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group">
                @{
                    var actionName = ViewContext.RouteData.Values["Action"].ToString();
                }

                <a asp-controller="OrganizerPanel"
                   asp-action="EventsList"
                   class="list-group-item list-group-item-action 
                   @(actionName == "EventsList" || actionName == "PlannedEventDetails" || actionName == "UpdateEvent" ? "active" : "")">
                    Wydarzenia zaplanowane
                </a>
                <a asp-controller="OrganizerPanel"
                   asp-action="PastEvents"
                   class="list-group-item list-group-item-action @(actionName.Contains("PastEvent") ? "active" : "")">
                    Wydarzenia zakończone
                </a>
                <a asp-controller="OrganizerPanel"
                   asp-action="PersonalData"
                   class="list-group-item list-group-item-action @(actionName == "PersonalData" ? "active" : "")">
                    Dane osobowe
                </a>
            </div>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>