@model WolontariuszPlus.Areas.OrganizerPanelArea.Models.EventDetailsViewModel

<div>
    <h4>Szczegóły wydarzenia "@Html.DisplayFor(model => model.Name)"</h4>
    <h5>@Html.DisplayNameFor(model => model.Date): @Html.DisplayFor(model => model.Date)</h5>
    @if (Model.ViewType == VolunteerPanelViewType.ARCHIVED_EVENTS)
    {
        <h5>@Html.DisplayNameFor(model => model.CollectedMoneySum): @Html.DisplayFor(model => model.CollectedMoneySum) zł</h5>
    }
    <h5>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h5>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultVolunteer.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultVolunteer.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefaultVolunteer.PhoneNumber)
                </th>
                @if (Model.ViewType == VolunteerPanelViewType.ARCHIVED_EVENTS)
                {
                    <th>
                        @Html.DisplayNameFor(model => model.DefaultVolunteer.CollectedMoney)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DefaultVolunteer.ReceivedPoints)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DefaultVolunteer.IsRated)
                    </th>
                }
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model.Volunteers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => v.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => v.PhoneNumber)
                    </td>
                    @if (Model.ViewType == VolunteerPanelViewType.ARCHIVED_EVENTS)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => v.CollectedMoney)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => v.ReceivedPoints)
                        </td>
                        <td>
                            @(v.IsRated ? "Tak" : "Nie")
                        </td>
                    }
                    <td>
                        @if (Model.ViewType == VolunteerPanelViewType.ARCHIVED_EVENTS && Model.CanModify)
                        {
                            var opinionText = v.IsRated ? "Aktualizuj opinię" : "Wystaw opinię";
                            var moneyText = v.CollectedMoney == 0 ? "Dodaj zebraną kwotę" : "Aktualizuj zebraną kwotę";

                            @Html.ActionLink(opinionText, "RateVolunteer", "EventDetailsManagement", new { volunteerOnEventId = v.VolunteerOnEventId }) @:|
                            @Html.ActionLink(moneyText, "AddMoney", "EventDetailsManagement", new { volunteerOnEventId = v.VolunteerOnEventId, collectedMoney = v.CollectedMoney })
                        }
                        else if (Model.ViewType == VolunteerPanelViewType.UPCOMING_EVENTS)
                        {
                            @Html.ActionLink("Usuń z wydarzenia", "RemoveVolunteerFromEvent", "EventDetailsManagement", new { volunteerOnEventId = v.VolunteerOnEventId })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @if (Model.ViewType == VolunteerPanelViewType.UPCOMING_EVENTS)
    {
        <a asp-controller="OrganizerPanel" asp-action="EventsList">Wróć do listy planowanych wydarzeń</a>
    }
    else
    {
        <a asp-controller="OrganizerPanel" asp-action="PastEvents">Wróć do listy zakończonych wydarzeń</a>
    }
</div>