@model WolontariuszPlus.Areas.OrganizerPanelArea.Models.EventDetailsManagement.AddMoneyViewModel

<h4>Modyfikuj ilość pieniędzy zebranych przez wolontariusza</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <h5>Zmień ilość pieniędzy zebranych przez wolontariusza @Html.DisplayFor(m => m.VolunteerName) na wydarzeniu @Html.DisplayFor(m => m.EventName).</h5>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="AddMoney">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="VolunteerOnEventId" />
            <div class="form-group">
                <label asp-for="CollectedMoney" class="control-label"></label>
                <input type="number" asp-for="CollectedMoney" class="form-control" rows="7" />
                <span asp-validation-for="CollectedMoney" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="PastEventDetails" asp-route-eventId="@Model.EventId">Wróć do szczegółów wydarzenia</a>
</div>