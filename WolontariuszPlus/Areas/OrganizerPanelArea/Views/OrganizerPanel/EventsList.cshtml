@model EventsViewModel

@if (Model.ViewType == VolunteerPanelViewType.UPCOMING_EVENTS)
{
    <h4>Zaplanowane wydarzenia</h4>
    
    <a asp-controller="EventsManagement" asp-action="CreateEvent">Dodaj nowe wydarzenie</a>
}
else
{
    <h4>Zakończone wydarzenia</h4>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DefaultEvent.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultEvent.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultEvent.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultEvent.RequiredPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultEvent.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EventViewModels)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @if (Model.ViewType == VolunteerPanelViewType.UPCOMING_EVENTS)
                    {
                        @Html.ActionLink("Szczegóły", "PlannedEventDetails", "EventDetailsManagement", new { eventId = item.EventId }) @:|
                        @Html.ActionLink("Edytuj", "UpdateEvent", "EventsManagement", new { eventId = item.EventId }) @:|
                        @Html.ActionLink("Usuń", "DeleteEvent", "EventsManagement", new { eventId = item.EventId })
                    }
                    else
                    {
                        @Html.ActionLink("Szczegóły", "PastEventDetails", "EventDetailsManagement", new { eventId = item.EventId })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
